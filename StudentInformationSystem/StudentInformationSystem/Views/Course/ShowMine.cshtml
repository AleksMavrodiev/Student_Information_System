@using System.Security.Claims
@model IEnumerable<StudentClassesViewModel>

@{
    ViewData["Title"] = "Student Courses";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>

<h2>Courses</h2>
    <table class="table table-bordered table-striped">
        <thead>
        <tr>
            <th>Course Name</th>
            <th>Lecture Room</th>
            <th>Start</th>
            <th>End</th>
            <th>Grade</th>
            <th>Details</th>
            @if(User.IsInRole("Admin"))
            {
                <th>Edit</th>
                <th>Delete</th>
            })
        </tr>
        </thead>
        <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td>@course.Name</td>
                <td>@course.LectureRoom</td>
                <td>@course.Start</td>
                <td>@course.End</td>
                <td>@course.Grade</td>
                <td>
                    <a class="btn btn-primary" asp-area="" asp-controller="Course" asp-action="Details" asp-route-id="@course.Id">Details</a>
                </td>
                @if (User.IsInRole("Admin"))
                {
                    <td>
                        <a class="btn btn-warning" asp-area="" asp-controller="Course" asp-action="Edit" asp-route-id="@course.Id">Edit</a>
                    </td>
                    <td>
                        <a class="btn btn-danger" asp-area="" asp-controller="Course" asp-action="Delete" asp-route-id="@course.Id">Delete</a>
                    </td>
                }
            </tr>
        }
        </tbody>
    </table>

</body>
</html>