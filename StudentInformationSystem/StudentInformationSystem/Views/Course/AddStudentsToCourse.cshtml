@{
    ViewData["Title"] = "Add Student to Course";
    var courseId = ViewData["CourseId"]; // Assuming CourseId is passed as a string
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <!-- Add your custom styles if needed -->
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">Add Student to Course</h1>

        <p>Adding a student to Course
        
        <form method="post" action="AddStudentsToCourse">
            <input type="hidden" name="courseId" value="@courseId" />

            <div class="form-group">
                <label for="email">Student Email:</label>
                <input type="email" class="form-control" id="email" name="studentEmail" required>
            </div>

            <button type="submit" class="btn btn-primary">Add Student</button>
        </form>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.0.7/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.min.js"></script>
</body>
</html>
