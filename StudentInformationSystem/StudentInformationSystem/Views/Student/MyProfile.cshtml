@model StudentProfileViewModel
@{
    ViewData["Title"] = "Profile";
}

<div class="container">
    <h2 class="my-4">My Profile</h2>

    <div class="card mb-4">
        <div class="row g-0">
            <div class="col-md-4">
                @if (Model.ProfilePicture != null)
                {
                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.ProfilePicture)" alt="Profile Picture" class="card-img-top" />
                }
                else
                {
                    <img src="https://moonvillageassociation.org/wp-content/uploads/2018/06/default-profile-picture1.jpg" alt="Default Profile Picture" class="card-img-top" />
                }

                <form asp-action="UploadProfilePicture" enctype="multipart/form-data" method="post" class="mt-3">
                    <input type="file" name="profilePicture" accept=".jpg, .jpeg, .png" class="form-control mb-2" />
                    <button type="submit" class="btn btn-primary">Upload Picture</button>
                </form>

                @if (Model.ProfilePicture != null)
                {
                    <form asp-action="RemoveProfilePicture" method="post" class="mt-2">
                        <button type="submit" class="btn btn-danger">Remove Picture</button>
                    </form>
                }
            </div>

            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">@Model.FirstName @Model.LastName</h5>
                    <p class="card-text"><strong>Faculty Number:</strong> @Model.FacultyNumber</p>

                    <div class="card-text">
                        <h6 class="mb-2">Contact Information</h6>
                        <ul class="list-unstyled">
                            <li><strong>Email:</strong> @Model.Email</li>
                            <li><strong>Phone Number:</strong> @Model.PhoneNumber</li>
                        </ul>
                    </div>
            </div>
        </div>
    </div>
</div>