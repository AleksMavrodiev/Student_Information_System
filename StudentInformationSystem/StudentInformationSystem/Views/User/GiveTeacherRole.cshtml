@model string
@{
    ViewData["Title"] = "Username Input";
}

<div class="container">
    <h2 class="my-4">Enter Username</h2>

    <div class="card">
        <div class="card-body">
            <form asp-action="GiveTeacherRole" method="post">
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input type="text" id="username" name="username" class="form-control" required>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>